# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
guidelines = 150
max_line_length = 150

[*.md]
trim_trailing_whitespace = false
max_line_length = off
